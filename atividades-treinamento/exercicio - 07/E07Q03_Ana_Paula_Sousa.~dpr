program E07Q03_Ana_Paula_Sousa;

{$APPTYPE CONSOLE}
{Faça um algoritmo em Delphi que receba três números inteiros diferentes
via parâmetro. Ordene esses números em ordem crescente e retorne os números
ordenados. Caso sejam digitados números iguais, deve ser solicitado um novo número.}

uses
  SysUtils;

procedure Trocar(var iA, iB: Integer);
var
  iTemp: Integer;
begin
  iTemp := iA;
  iA := iB;
  iB := iTemp;
end;

procedure Ordenar(var iNum1, iNum2, iNum3: Integer);
begin
  if iNum1 > iNum2 then
    Trocar(iNum1, iNum2);
  if iNum2 > iNum3 then
    Trocar(iNum2, iNum3);
  if iNum1 > iNum2 then
    Trocar(iNum1, iNum2);
end;

var
  iNum1, iNum2, iNum3: iInteger;

begin
  repeat
    Write('Digite o primeiro número inteiro: ');
    Readln(iNum1);
    Write('Digite o segundo número inteiro: ');
    Readln(iNum2);
    Write('Digite o terceiro número inteiro: ');
    Readln(iNum3);
    
    if (iNum1 = iNum2) or (iNum1 = iNum3) or (iNum2 = iNum3) then
      Writeln('Os números devem ser diferentes. Por favor, digite novamente.');
  until (iNum1 <> iNum2) and (iNum1 <> iNum3) and (iNum2 <> iNum3);

  Ordenar(iNum1, iNum2, iNum3);

  Writeln('Números ordenados em ordem crescente: ', iNum1, ', ', iNum2, ', ', iNum3);

  Readln;
end.
